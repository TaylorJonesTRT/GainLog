<%= turbo_frame_tag "exercise_list" do %>
  <div class="flex flex-col w-full gap-3 mt-4">
  <ul>
    <% templates.each do |template| %>
      <div class="flex flex-row justify-between max-w-full">
        <div class="flex flex-col ">
          <li>
            <%= template.name %>
          </li>
          <li class="flex-none grow-0 text-xs truncate max-w-64">
            <%= @template_exercises[template.id] %>
          </li>
        </div>
        <div class="flex flex-row">
          <%= link_to edit_template_path(template), class: "btn btn-square btn-outline btn-secondary mr-4 hover:btn-success", data: { turbo: false } do %>
            <%= icon('fa-solid', 'pen-to-square')%>
          <% end %>
          <%= button_to workouts_path(template_id: template.id), method: "post", class: "btn btn-square btn-outline btn-secondary hover:btn-info", data: { turbo: false } do %>
            <%= icon('fa-solid', 'plus')%>
          <% end %>
        </div>
      </div>
      <div class="divider divider-neutral"></div>
    <% end %>
  </ul>
  </div>
<% end %>
