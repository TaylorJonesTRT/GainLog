<div class="uppercase mx-auto w-11/12 flex flex-col justify-end items-center">

  <div class="mx-auto w-max h-auto">
    <%= image_tag "/assets/gainloglogo.svg" %>
  </div>

  <h2 class="mx-auto mt-5 mb-10">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col"}) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <div class="text-black"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="field mt-5">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "text-black" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-1">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions btn btn-primary mt-4 mb-4">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
